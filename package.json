{
  "name": "robmclarty-words",
  "version": "1.0.0",
  "description": "Writings and pencraft by Rob McLarty",
  "main": "index.js",
  "scripts": {
    "build:styles:words": "npx sass --style=compressed --no-source-map ./src/static/stylesheets/words.scss ./build/stylesheets/words.css",
    "build:styles:cv": "npx sass --style=compressed --no-source-map ./src/static/stylesheets/cv.scss ./build/stylesheets/cv.css",
    "build:styles": "npm run build:styles:words && npm run build:styles:cv",
    "build:styles:watch": "npx sass --style=expanded --source-map --watch ./src/static/stylesheets/words.scss ./build/stylesheets/words.css",
    "build": "npm run build:styles && npx @11ty/eleventy",
    "start": "npx @11ty/eleventy --serve --port=3001",
    "debug": "DEBUG=Eleventy* npx @11ty/eleventy --serve --port=3001",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Rob McLarty",
  "license": "UNLICENSED",
  "devDependencies": {
    "@11ty/eleventy": "1.0.1",
    "@11ty/eleventy-img": "3.1.8",
    "@11ty/eleventy-plugin-rss": "1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "4.0.0",
    "sass": "1.69.5"
  }
}
