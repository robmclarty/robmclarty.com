      <section class="words-list-section">
{#         <h2>ARTICLES</h2>

        <a class="see-all" href="/words/articles">see all articles</a> #}

        <ul class="words-list">
          {% for article in collections.articles | reverse | morePublishedWords('articles', page.url) %}
            <li>
              <a href="{{ article.url }}">
                <div class="thumbnail" style="background-image: url('{{ article.url + article.data.thumbnail }}')"></div>
              </a>

              <h3>
                <a href="{{ article.url }}">{{ article.data.title }}</a>
              </h3>

              {% if article.data.subtitle %}
                <p>
                  <a href="{{ article.url }}">{{ article.data.subtitle }}</a>
                </p>
              {% endif %}

              <div class="meta">
                <ul class="tags">
                  {% for tag in article.data.tags %}
                    {% if tag != "articles" %}
                      <li>
                        <a href="/words/tags/{{ tag }}">{{ tag }}</a>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>

                <span>·</span>

                <time datetime="{{ article.data.date }}">
                  {{ article.data.date.toLocaleDateString('en-CA', {
                    year: "numeric",
                    month: "short",
                    day: "numeric"
                  }) }}
                </time>
              </div>
            </li>
          {% endfor %}
        </ul>
      </section>

