<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/words.css" rel="stylesheet" type="text/css">
    <title>{{ title }} :: words :: Rob McLarty</title>
  </head>

  <body class="words">
    <section class="content">
      <article>
        <header>
          <h1>{{ title }}</h1>

          {% if subtitle %}
            <p>{{ subtitle }}</p>
          {% endif %}

          <div class="meta">
            <span>Published in</span>

            <ul class="tags">
              {% for tag in tags %}
                {% if tag != "articles" %}
                  <li>
                    <a href="/tags/{{ tag }}">{{ tag }}</a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>

            <span>·</span>

            <time datetime="{{ date }}">
              {{ date.toLocaleDateString('en-CA', { year: "numeric", month: "short", day: "numeric" }) }}
            </time>
          </div>
        </header>

        {{ content | safe }}

        {#
        <footer>
          <ul class="tags">
            <li>
              <a href="/words">words</a>
            </li>
            <li>::</li>

            {% for tag in tags %}
              {% if tag != "articles" %}
                <li>
                  <a href="/tags/{{ tag }}">{{ tag }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </footer>
        #}
      </article>

      <footer class="content-footer">
        <h4>More articles you might like</h4>

        {# TODO: make this list a reusable template #}
        <ul class="words-list">
          {% for article in collections.articles | morePublishedWords('articles', page.url) %}
            <li>
              <a href="{{ article.url }}">
                <div class="thumbnail" style="background-image: url('{{ article.url + article.data.thumbnail }}')"></div>
              </a>

              <h3>
                <a href="{{ article.url }}">{{ article.data.title }}</a>
              </h3>

              {% if article.data.subtitle %}
                <p>
                  <a href="{{ article.url }}">{{ article.data.subtitle }}</a>
                </p>
              {% endif %}

              <div class="meta">
                <ul class="tags">
                  {% for tag in article.data.tags %}
                    {% if tag != "articles" %}
                      <li>
                        <a href="/words/tags/{{ tag }}">{{ tag }}</a>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>

                <span>·</span>

                <time datetime="{{ date }}">
                  {{ article.data.date.toLocaleDateString('en-CA', {
                    year: "numeric",
                    month: "short",
                    day: "numeric"
                  }) }}
                </time>
              </div>
            </li>
          {% endfor %}
        </ul>

        <p class="small">
          &copy; 1997-2023 Rob McLarty
        </p>
      </footer>
    </section>

    <section class="banner" style="background-image: url('{{ banner }}')">
      <a class="back" href="/words" title="Back to Words">Back to Words</a>
    </section>
  </body>
</html>
