<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/words.css" rel="stylesheet" type="text/css">
    <title>{{ title }} :: Words :: Rob McLarty</title>
  </head>

  <body class="words">
    <article>
      <section class="content">
        <header>
          <p class="date">
            {{ date.toLocaleDateString('en-CA', { year: "numeric", month: "long", day: "numeric" }) }}
          </p>

          <h1>{{ title }}</h1>

          <ul>
            <li>
              <a href="/words">words</a>
            </li>
            <li>::</li>

            {% for tag in tags %}
              {% if tag != "articles" %}
                <li>
                  <a href="/tags/{{ tag }}">{{ tag }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </header>

        {{ content | safe }}

        <footer>
          <a href="/words">Back to Words</a>
          <br />
          <br />
          &copy; 1997-2023 Rob McLarty
        </footer>
      </section>
    </article>

    <aside class="banner" style="background-image: url('/images/words/articles/{{ banner }}')">
      <a class="back" href="/words" title="Back to Words">Back to Words</a>
    </aside>
  </body>
</html>
